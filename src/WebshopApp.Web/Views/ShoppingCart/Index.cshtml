
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

<h3>Cart Page</h3>
@if (ViewBag.cart.Count == 0)
{
    <h3>Your shopping card is empty</h3>
}
else
{
    <table class="table-responsive-xl justify-content-around">
        <tr class="m-auto ml-3 mr-3 justify-content-around">
            <th>Option</th>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
        @foreach (var item in ViewBag.cart)
        {
            <tr>
                <td><a asp-controller="ShoppingCart" asp-action="Remove" asp-route-id="@item.Product.Id">Remove</a></td>
                <td>@item.Product.Id</td>
                <td>@item.Product.Name</td>
                @*<td><img src="~/images/@item.Product.ImagePath" width="60" /> </td>*@
                <td>@item.Product.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.Price * item.Quantity)</td>
            </tr>
        }
        <tr>
            @*<td align-right colspan="6">Sum</td>
        <td>
            @ViewBag.total
        </td>*@
        </tr>
    </table>
}

<br>
<a asp-controller="Home" asp-action="Index">Continue Shopping</a>

</body>
</html>